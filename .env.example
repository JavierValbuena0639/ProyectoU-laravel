APP_NAME=SumAxia
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://sumaxia.local:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=sumaxia
DB_USERNAME=sumaxia_user
DB_PASSWORD=sumaxia_password
# Opcional: puedes usar una URL completa en lugar de las variables anteriores
# DB_URL=mysql://usuario:password@host:puerto/base_de_datos
# En Railway normalmente verás un DATABASE_URL; mapea ese valor a DB_URL

# Si tu proveedor exige SSL para MySQL (p.ej. Railway), ajusta:
# DB_SSL_MODE=REQUIRED
# Para conexiones PDO en Laravel, si necesitas CA específica:
# MYSQL_ATTR_SSL_CA=/ruta/al/certificado_ca.crt

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
# En producción sin Redis, usa colas en BD
QUEUE_CONNECTION=database

## En producción, usa Redis para colas
## Asegúrate de tener Redis operativo y el cliente configurado

CACHE_STORE=redis
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Si usas Redis, configura estas variables y cambia QUEUE_CONNECTION=redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Redis específicos para cache y queue
REDIS_CACHE_CONNECTION=cache
REDIS_CACHE_LOCK_CONNECTION=default
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE=default
REDIS_QUEUE_RETRY_AFTER=90

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=<tu_usuario_mailtrap>
MAIL_PASSWORD=<tu_password_mailtrap>
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# --------------------------------------------
# DIAN Electronic Invoicing (FE)
# --------------------------------------------
# Configure your DIAN FE credentials and environment.
# Values are read by config/fe.php
FE_SOFTWARE_ID=
FE_SOFTWARE_PIN=
FE_CERT_PATH=
FE_CERT_PASSWORD=
# 'test' for habilitation, 'prod' for production
FE_ENVIRONMENT=test

# --------------------------------------------
# Railway notes
# --------------------------------------------
# Cuando adjuntas una BD MySQL en Railway, ellos exponen variables:
# MYSQLHOST, MYSQLPORT, MYSQLDATABASE, MYSQLUSER, MYSQLPASSWORD y MYSQL_URL
# Este proyecto detecta automáticamente esas variables si DB_* no está definido.
# Para conexión pública (proxy), usa DB_SSL_MODE=REQUIRED.
